{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "lib": ["ES2022", "dom"],
      "moduleResolution": "Node",
      "allowJs": true,
      "outDir": "dist",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "declaration": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "ts-node": { 
      "files": true,
      "esm": true, 
      "experimentalSpecifierResolution": true 
    },
    "typeRoots": [
      "node_modules/@types", 
      "src/types/",
    ],
    "typings": [
      "./src/types/index.d.ts"
    ],
    "include": [
      "src"
    ],
    "exclude": ["node_modules"]
}